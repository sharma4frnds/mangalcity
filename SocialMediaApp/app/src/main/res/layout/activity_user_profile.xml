<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:id="@+id/drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBarLayout">

            <include layout="@layout/app_bar_layout"
                android:id="@+id/main_page_toolbar" />



        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1500dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/profile_background"
                        android:id="@+id/relativeLayout5">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/person_profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/user" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/person_profile_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:text="Pooja Kumari" />

                        <ImageView
                            android:id="@+id/camera_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textView6"
                            android:layout_marginEnd="19dp"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/camera" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/textView6"
                            android:layout_toEndOf="@+id/person_profile_image"
                            android:layout_toRightOf="@+id/person_profile_image"
                            app:srcCompat="@drawable/ic_create_black_24dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/lightBlue"
                        android:layout_below="@+id/relativeLayout5">

                        <EditText
                            android:id="@+id/mobile_pro"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="10"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:hint="Mobile No."
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_create_black_24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/email_pro"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:background="@null"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:hint="Email Id"
                            android:inputType="textEmailAddress"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_create_black_24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r2"
                        android:background="@color/lightBlue">

                        <EditText
                            android:id="@+id/fulladdress_pro"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:background="@null"
                            android:inputType="text"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:hint="Full Address"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_create_black_24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r3"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/proffession_pro"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:background="@null"
                            android:inputType="text"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:hint="Proffession"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_create_black_24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/r5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r4"
                        android:background="@color/lightBlue">

                        <Spinner
                            android:id="@+id/gender_spinner"
                            android:layout_width="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"

                             />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r5"
                        android:background="@color/white">

                        <Spinner
                            android:id="@+id/marital_spinner"
                            android:layout_width="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="20dp"
                            android:layout_centerVertical="true"

                             />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r7"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/r6"
                        android:background="@color/lightBlue">

                        <EditText
                            android:id="@+id/dob_pro"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:background="@null"
                            android:fontFamily="@font/pt_sans_web_regular"
                            android:hint="dob"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_create_black_24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"/>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textcurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/r7"
                        android:text="Home Location"
                        android:layout_marginLeft="22dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pt_sans_web_bold"/>

                    <LinearLayout
                        android:id="@+id/linear_home"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"

                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/textcurrent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/lightBlue"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/country_spinner"
                                    android:drawSelectorOnTop="true"

                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/state_spinner"
                                    android:drawSelectorOnTop="true"

                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/lightBlue"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/district_spinner"
                                    android:drawSelectorOnTop="true"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/block_spinner"
                                    android:drawSelectorOnTop="true"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>




                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/texthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_home"
                        android:text="Current Location"
                        android:layout_marginLeft="22dp"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pt_sans_web_bold"/>

                    <LinearLayout
                        android:id="@+id/linear_current"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"

                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/texthome">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/lightBlue"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/country_spinner_home"
                                    android:drawSelectorOnTop="true"

                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/state_spinner_home"
                                    android:drawSelectorOnTop="true"

                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/lightBlue"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/district_spinner_home"
                                    android:drawSelectorOnTop="true"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/block_spinner_home"
                                    android:drawSelectorOnTop="true"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:background="@color/white"></LinearLayout>




                        </LinearLayout>


                    </LinearLayout>




                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/r7"
                        android:layout_marginEnd="135dp"
                        android:layout_marginRight="135dp"
                        android:layout_marginTop="699dp"
                        android:background="@color/appBlue"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pt_sans_web_regular"
                        android:text="Submit" />


                </RelativeLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ListView

        android:id="@+id/left_drawer"
        android:layout_height="match_parent"
        android:layout_width="240dp"
        android:divider="@android:color/transparent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"

        />
</android.support.v4.widget.DrawerLayout>