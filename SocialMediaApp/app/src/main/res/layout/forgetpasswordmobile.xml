<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Enter Your Mobile Number"
            android:textColor="#000"
            android:fontFamily="@font/pt_sans_web_bold"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/cross_icon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reset"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <EditText
                    android:id="@+id/mobile_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:hint="Mobile Number"
                    android:fontFamily="@font/pt_sans_web_regular"
                    android:inputType="number"
                    android:letterSpacing="0.1"
                    android:maxLength="10"
                    android:textColor="#000"
                    android:textColorHint="@color/appBlue"
                    android:textSize="16dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBlue"></LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBlue"></LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">



        <Button
            android:id="@+id/reset_button_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@color/appBlue"
            android:textColor="#fff"
            android:fontFamily="@font/pt_sans_web_regular"
            android:letterSpacing="0.1"
            android:textSize="16sp"
            android:text="SUBMIT"


            />



    </RelativeLayout>




</LinearLayout>