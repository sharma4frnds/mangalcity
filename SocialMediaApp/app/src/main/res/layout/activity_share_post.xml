<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:id="@+id/drawer">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.clamour.detlef.sidebar.SecurityScreen">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBarLayout">

            <include layout="@layout/app_bar_layout"
                android:id="@+id/main_page_toolbar" />



        </android.support.design.widget.AppBarLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_below="@+id/appBarLayout"
            >

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/pt_sans_web_bold"
                android:textSize="20sp"
                android:text="Share On Your TimeLine" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@+id/t1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_layout"
                android:id="@+id/relative_complete">

                <EditText
                    android:id="@+id/post_text"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profile_image"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_toRightOf="@+id/profile_image"
                    android:fontFamily="@font/pt_sans_web_regular"
                    android:maxLines="5"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="write something.."
                    android:textColor="@color/text_grey"
                    android:textSize="15sp" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/post_text"
                    android:id="@+id/relative_imagevideo">

                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="15dp"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/videorelative"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="invisible">
                        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/exo_player_view">

                        </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/audiorelative"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="90dp"
                        android:visibility="invisible">

                        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                            android:id="@+id/exo_player_view_audio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
                    </RelativeLayout>


                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/relative_imagevideo"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/relative_imagevideo"
                    android:layout_marginTop="21dp"
                    />

            </RelativeLayout>

            <Button

                android:id="@+id/share_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relative_complete"
                android:layout_alignRight="@+id/relative_complete"
                android:layout_below="@+id/relative_complete"
                android:text="share"
                android:textColor="@color/white"
                android:fontFamily="@font/pt_sans_web_bold"
                android:background="@drawable/button_background"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>